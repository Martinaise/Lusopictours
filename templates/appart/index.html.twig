{% extends 'base.html.twig' %}

{% block title %}Nos résidences
{% endblock %}

{% block body %}
<h1>
	nos résidences</h1>

<div class="container">
	<div class="row">
		{% for appart in apparts %}
			<div class="col-md-4 text-center">
				<div>
					<img src="/img/{{ appart.image }}" alt="{{appart.name}}" class="img-fluid">
					<p><b>{{appart.ville}},{{appart.pays}}</b></p>
					<pre>
						{{ dump(appart) }}
					</pre>
					
                    {# <p>{{ appart.prix_journalier |format_currency('EUR', {rounding_mode: 'floor'}) }}</p> #}
				</div>
			</div>
		{% endfor %}
	</div>
</div {% endblock %}
